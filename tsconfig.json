{
    "compilerOptions": {
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}